{
  "compilerOptions": {
    "target": "ES2022",                // ✅ supports replaceAll, top-level await, etc.
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src",

    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,              // ✅ ignore node_modules type errors

    "resolveJsonModule": true,         // ✅ allow import of JSON (ABIs)
    "moduleResolution": "node",

    /* Optional but helps with viem and Node types */
    "types": ["node"],
    "lib": ["ES2022", "DOM"]           // ✅ include modern JS and DOM types
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
