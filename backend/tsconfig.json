{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "types": ["node"],

    "baseUrl": ".",          // ✅ Add this
    "paths": {               // ✅ Add path mappings
      "@artifacts/*": ["artifacts/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
