{
  "compilerOptions": {
    /* ─────────────────────────────────────────────
     * Language & Runtime
     * ───────────────────────────────────────────── */
    "target": "ES2022",                  // Required for Error.cause, BigInt, viem
    "lib": ["ES2022"],
    "module": "commonjs",
    "moduleResolution": "node",

    /* ─────────────────────────────────────────────
     * Project Structure
     * ───────────────────────────────────────────── */
    "rootDir": "src",
    "outDir": "dist",
    "resolveJsonModule": true,

    /* ─────────────────────────────────────────────
     * Interop & Environment
     * ───────────────────────────────────────────── */
    "esModuleInterop": true,
    "types": ["node"],

    /* ─────────────────────────────────────────────
     * Strictness (kept as-is, excellent setup)
     * ───────────────────────────────────────────── */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true,

    /* ─────────────────────────────────────────────
     * Build Quality
     * ───────────────────────────────────────────── */
    "skipLibCheck": true                 // REQUIRED for viem / ox ecosystem
  },

  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
