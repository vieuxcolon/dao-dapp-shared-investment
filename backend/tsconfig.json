{
  "compilerOptions": {
    "target": "ES2021",                  // Use ES2021+ for replaceAll, BigInt, etc.
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "types": ["node"],

    "baseUrl": ".",                      
    "paths": {                           
      "@artifacts/*": ["artifacts/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
