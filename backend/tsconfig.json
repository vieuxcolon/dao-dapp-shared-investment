{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src",

    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    /* ðŸ”‘ REQUIRED FOR YOUR ERRORS */
    "resolveJsonModule": true,
    "moduleResolution": "node",

    /* ðŸ§  Improves viem + ABI typing */
    "types": ["node"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
